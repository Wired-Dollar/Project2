<div class="container">
  <div class="uk-text-center" uk-grid>
    <div class="uk-width-expand@m">
      <form id="addCategory" class="uk-position-center uk-search uk-search-default">
        <input class="uk-search-input" type="search" placeholder="Find something different...">
      </form>
      <div uk-slider>
        <div class="uk-position-center">
            <div id="slider" class="uk-slider-container uk-light">
                <ul class="uk-slider-items uk-child-width-1-2 uk-child-width-1-3@s uk-child-width-1-4@m">
              <li id="Breweries" class="addCategory">
                  <p id="image1" alt="">
                  <div class="uk-position-center uk-panel"><h3>Bars and Breweries</h3></div>
              </li>
              <li id="Restuarants" class="addCategory">
                  <p id="image2" alt="">
                  <div class="uk-position-center uk-panel"><h3>Restaurants</h3></div>
              </li>
              <li id="Venues" class="addCategory">
                  <p id="image3" alt="">
                  <div class="uk-position-center uk-panel"><h3>Sporting Events</h3></div>
              </li>
              <li id="Museums" class="addCategory">
                  <p id="image4" alt="">
                  <div class="uk-position-center uk-panel"><h3>Museums</h3></div>
              </li>
              <li id="Libraries" class="addCategory">
                  <p id="image5" alt="">
                  <div class="uk-position-center uk-panel"><h3>Libraries</h3></div>
              </li>
              <li id="Shopping" class="addCategory">
                  <p id="image6" alt="">
                  <div class="uk-position-center uk-panel"><h3>Shopping</h3></div>
              </li>
              <li id="Parks" class="addCategory">
                  <p id="image7" alt="">
                  <div class="uk-position-center uk-panel"><h3>Parks</h3></div>
              </li>
          </ul>
          <a class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
          <a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next uk-slider-item="next"></a>
        </div>
        <ul class="uk-slider-nav uk-dotnav uk-flex-center uk-margin"></ul>
      </div>    
    </div>
    <div class="uk-width-1-4@m">
      <button id="new-event" class="uk-position-top-right uk-button uk-button-default" type="button" uk-toggle="target: #offcanvas-flip">Itinerary</button>
        <div id="offcanvas-flip" uk-offcanvas="mode: slide; flip: true; overlay: true">
          <div class="uk-offcanvas-bar">      
              <button class="uk-offcanvas-close" type="button" uk-close></button>
                <ul class="list-group list-group-flush" id="event-group">
                  {{#each event}}
                    <ul uk-accordion>
                      <li class="newEvent">
                        <a class="uk-accordion-title" href="#">{{eventName}}</a>
                          <div class="uk-accordion-content">
                            <p>{{eventAddress}}</p>
                            <p>{{eventDate}}</p>
                            <br>
                            <button id="remove-btn" class="remove-status" data-id="{{id}}"><Center>Remove</Center></button>
                            <button id="search-btn" class="location-status" data-id="{{id}}"><Center>Search Again</Center></button>
                          </div>
                      </li>
                    </ul>
                  {{/each}}
                </ul>
          </div>
        </div>
    </div>  
  </div>
  <div class="uk-text-center" uk-grid>
    <div class="uk-width-1-4@m">
      <div id="category">
        {{#each category}}
          <dl class="uk-description-list uk-description-list-divider">
              <dt>{{categoryName}}</dt>
              <dd>{{categoryAddress}}</dd>
              <dd>{{categoryRating}}</dd>
              <dd>{{categoryPrice}}</dd>
              <br>
              <button id="add-btn" class="create-event" data-id="{{id}}"><Center>Add to Itinerary</Center></button>
          </dl>
        {{/each}}
      </div>
    </div>
    <div class="uk-width-expand@m">
      <div id="map"></div>
    </div>
  </div>
</div>


<script src="../public/js/input.js" type="text/javascript"></script>
<script src="../public/js/event-maintain.js" type="text/javascript"></script>